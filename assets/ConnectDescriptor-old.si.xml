

<!-- Design of ConnectDescriptor.si.xml -->

<connect-descriptor>

   	<!-- Services -->
  		<!-- Service -->
    <services>
        
        <service>
            
            <!-- General Service Properties -->
            	<!-- Mandatory Field -->
            <property name="name">name_of_service</property>
            
            	<!-- Optional Field -->
            <property name="description">description_of_service</property>
            
            	<!-- Optional Field (DEFAULT: HTTP) -->
            <property name="protocol">HTTP|HTTPS</property>
            
            	<!-- Mandatory Field -->
            <property name="instance">address_of_instance</property>
            
            	<!-- Mandatory Field -->
            <property name="port">port_number</property>

            	<!-- Optional Field -->
            <property name="context">context_of_service</property>
            
			<!-- APIS -->
				<!-- API -->
            <apis>
                
	            <api>
	
	                <!-- General Request Properties -->
	                
	                	<!-- Mandatory Field -->
	                <property name="name">name_of_api</property>
	                
	                	<!-- Mandatory Field -->
	                <property name="type">GET|HEAD|POST|PUT|DELETE|TRACE|OPTIONS|CONNECT|PATCH</property>
	
	                	<!-- Mandatory Field -->
	                <property name="api">full_api_path</property>
	                
		            	<!-- Optional Field (DEFAULT: SYNC)-->
		            <property name="mode">SYNC|ASYNC</property>
		            
		            	<!-- Optional Field (DEFAULT: false) -->
		            <property name="database_needed">database_needed_for_service</property>
	
					
		            <!-- Query Parameters -->
		            	<!-- Query Parameter -->
		            <query-parameters>
		                
		                <query-parameter>
		                    
		                    	<!-- Mandatory Field -->
		                    <property name="name">name_of_query_parameter</property>
		                    	
		                    	<!-- Mandatory Field -->
		                    <property name="value">value_of_query_parameter</property>
		                    
		                </query-parameter>
		                
		            </query-parameters>
		            
		            
		            <!-- Header Parameters -->
		            	<!-- Header Parameter -->
		            <header-parameters>
		                
		                <header-parameter>
		                    
		                    <property name="name">name_of_header_parameter</property>
		                    
		                    <property name="value">value_of_header_parameter</property>
		                    
		                </header-parameter>
		                
		            </header-parameters>
	
		            	
	            	<!-- Optional Field -->
		            	<!-- If Reader/Writer is defined using designer -->	
		            <data-handler type="READER|WRITTER">data_handler_name</data-handler>
		            	            
	            </api>
	                
            </apis>
            
        </service>
        
        
        <!-- Service Path -->
        <service path="service_path"></service>
        
    </services>

    
    <!-- Data Handlers -->
    	<!-- Data Handler -->
    <data-handlers>

        <data-handler>path_of_data_handler</data-handler>
    
    </data-handlers>
    
    
	
    <!-- Refresh Handlers -->
    	<!-- Refresh Handler -->
    <refresh-handlers>
        
        <refresh-handler>
            
           		<!-- Mandatory Field -->
     		<property name="name">name_of_refresh_handler</property>
     		
			
     		<!-- Services -->
     			<!-- Service -->
     		<services>
     		    
     		    	<!-- name: Mandatory Field -->
     		    	<!-- api: Optional Field  -->
     		    <service name="name_of_service" api="name_of_api"></service>
     		    
     		</services>
     		
        </refresh-handler>
        
    </refresh-handlers>
    

    <!-- Push Notification -->
    <notification>
        
        	<!-- Optional Field -->
        <property name="name_of_property">value_of_property</property>
        
    </notification>

    
    
    <!-- Authentication -->
    <authentication>
        
        	<!-- Mandatory Field -->
        <property name="type">type_of_authentication</property>
        
    </authentication>

    
    
    <!-- Library Needed Under This HybridDescriptor -->
    <libraries>
        
        <library>full_path_of_library_descriptor_file</library>
        
    </libraries>
    
    
</connect-descriptor>










