

<!-- Design of ConnectDescriptor.si.xml -->

<connect-descriptor>

   	<!-- Services -->
    <service-descriptors>
  		
  			<!-- Service -->
        <service-descriptor>full_path_of_service</service-descriptor>
    
    </service-descriptors>

    
	
    <!-- Refresh Handlers -->
    	<!-- Refresh Handler -->
    <refresh-descriptors>
        
        <refresh-descriptor>
            
           		<!-- Mandatory Field -->
     		<property name="name">name_of_refresh_handler</property>
			
     			<!-- Optional Field -->
     		<property name="interval">refresh_interval_in_millisecond</property>
     				
			
     		<!-- Services -->
     			<!-- Service -->
     		<services>
     		    
     		    <service>name_of_service.name_of_api</service>
     		    
     		</services>
     		
        </refresh-descriptor>
        
    </refresh-descriptors>
    

    <!-- Authentication -->
    <authentication-descriptor>
        
        	<!-- Mandatory Field -->
        <property name="type">type_of_authentication</property>
		
    </authentication-descriptor>

    
    <!-- Push Notification -->
    <notification-descriptor>
        
        	<!-- Optional Field -->
        <property name="name_of_property">value_of_property</property>

    </notification-descriptor>
    
</connect-descriptor>
