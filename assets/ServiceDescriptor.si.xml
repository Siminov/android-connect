<service-descriptor>
    
	<!-- General Service Properties -->
    	<!-- Mandatory Field -->
    <property name="name">name_of_service</property>
    
    	<!-- Optional Field -->
    <property name="description">description_of_service</property>
    
    	<!-- Optional Field (DEFAULT: HTTP) -->
    <property name="protocol">HTTP|HTTPS</property>
    
    	<!-- Mandatory Field -->
    <property name="instance">address_of_instance</property>
    
    	<!-- Optional Field -->
    <property name="port">port_number</property>

    	<!-- Optional Field -->
    <property name="context">context_of_service</property>
         
	<!-- APIS -->
		<!-- API -->
    <apis>
            
		<api>

			<!-- General Request Properties -->
         
	        	<!-- Mandatory Field -->
	       	<property name="name">name_of_api</property>
         
         		<!-- Mandatory Field -->
         	<property name="type">GET|HEAD|POST|PUT|DELETE|TRACE|OPTIONS|CONNECT|PATCH</property>

         		<!-- Mandatory Field -->
         	<property name="api">full_api_path</property>
         
      			<!-- Optional Field (DEFAULT: SYNC)-->
      		<property name="mode">SYNC|ASYNC</property>
      

      					
      		<!-- Query Parameters -->
      			<!-- Query Parameter -->
      		<query-parameters>
          
          		<!-- Name and Value is Mandatory Field -->
          		<query-parameter name="name_of_query_parameter">value_of_query_parameter</query-parameter>
          
      		</query-parameters>
      
      
      		<!-- Header Parameters -->
      			<!-- Header Parameter -->
      		<header-parameters>
          
          		<!-- Name and Value is Mandatory Field -->
          		<header-parameter name="name_of_header_parameter">value_of_header_parameter</header-parameter>

        	</header-parameters>
      	
     	</api>
    </apis>
    
</service-descriptor>
