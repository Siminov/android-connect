<database-mapping-descriptor>

	<entity table_name="SERVICE_REQUEST" class_name="siminov.connect.model.ServiceRequest">

		<attribute variable_name="requestId" column_name="REQUEST_ID"> 
			<property name="type">long</property>
			<property name="primary_key">true</property>
			<property name="not_null">true</property>
			<property name="unique">true</property>
		</attribute>

		<attribute variable_name="service" column_name="SERVICE"> 
			<property name="type">java.lang.String</property>
			<property name="primary_key">true</property>
			<property name="not_null">true</property>
			<property name="unique">true</property>
		</attribute>

		<attribute variable_name="api" column_name="API"> 
			<property name="type">java.lang.String</property>
			<property name="primary_key">true</property>
			<property name="not_null">true</property>
			<property name="unique">true</property>
		</attribute>

		<attribute variable_name="instanceOf" column_name="INSTANCE_OF"> 
			<property name="type">java.lang.String</property>
		</attribute>
		
		<relationships>
   			<one-to-many refer="serviceRequestResources" refer_to="siminov.connect.model.ServiceRequestResource" on_update="cascade" on_delete="cascade">
   			    <property name="load">true</property>
   			</one-to-many>		
   		</relationships>
				
	</entity>
	
</database-mapping-descriptor>